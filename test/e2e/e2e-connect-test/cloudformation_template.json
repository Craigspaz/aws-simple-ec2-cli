{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Resources": {
        "newVPC": {
            "Type": "AWS::EC2::VPC",
            "Properties": {
                "CidrBlock": "172.31.0.0/16",
                "EnableDnsHostnames": true,
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "ez-ec2 VPC"
                    }
                ]
            }
        },
        "newSubnet": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "CidrBlock": "172.31.0.0/24",
                "MapPublicIpOnLaunch": true,
                "AvailabilityZone": "us-east-2a",
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "ez-ec2 Subnet"
                    }
                ],
                "VpcId": {
                    "Ref": "newVPC"
                }
            }
        },
        "newInstance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "InstanceType": "t2.micro",
                "ImageId": "ami-026dea5602e368e96",
                "NetworkInterfaces": [
                    {
                        "DeviceIndex": "0",
                        "GroupSet": [
                            {
                                "Ref": "newSecurityGroup"
                            }
                        ],
                        "SubnetId": {
                            "Ref": "newSubnet"
                        }
                    }
                ]
            }
        },
        "newSecurityGroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "SSH Group",
                "SecurityGroupIngress": {
                    "CidrIp": "0.0.0.0/0",
                    "FromPort": 22,
                    "IpProtocol": "tcp",
                    "ToPort": 22
                },
                "VpcId": {
                    "Ref": "newVPC"
                }
            }
        },
        "newRouteTable": {
            "Type": "AWS::EC2::RouteTable",
            "Properties": {
                "VpcId": {
                    "Ref": "newVPC"
                }
            }
        },
        "newInternetGateway": {
            "Type": "AWS::EC2::InternetGateway",
            "Properties": {}
        },
        "newVPCGatewayAttachment": {
            "Type": "AWS::EC2::VPCGatewayAttachment",
            "Properties": {
                "InternetGatewayId": {
                    "Ref": "newInternetGateway"
                },
                "VpcId": {
                    "Ref": "newVPC"
                }
            }
        },
        "newRoute": {
            "Type": "AWS::EC2::Route",
            "Properties": {
                "RouteTableId": {
                    "Ref": "newRouteTable"
                },
                "GatewayId": {
                    "Ref": "newInternetGateway"
                },
                "DestinationCidrBlock": "0.0.0.0/0"
            }
        },
        "newSubnetRouteTableAssociation": {
            "Type": "AWS::EC2::SubnetRouteTableAssociation",
            "Properties": {
                "SubnetId": {
                    "Ref": "newSubnet"
                },
                "RouteTableId": {
                    "Ref": "newRouteTable"
                }
            }
        }
    }
}